<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.kwShop.Shop.mall.mapper.ReplyMapper">

    <insert id="insert" parameterType="com.kwShop.Shop.mall.vo.ReplyVO">

        insert into tbl_reply (p_id, r_reply, r_replyer, r_date)
        values (#{p_id}, #{r_reply}, #{r_replyer}, NOW())

    </insert>

    <select id="list" resultType="com.kwShop.Shop.mall.vo.ReplyVO">
        select *
        from tbl_reply
        where p_id = #{p_id}
    </select>

    <update id="update">

        update tbl_reply
        set r_reply = #{r_reply} where r_no = #{r_no}

    </update>

    <delete id="delete">

        delete
        from tbl_reply
        where r_no = #{r_no}

    </delete>

</mapper>